@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<hr />

@* <div class="w-75 m-auto">
    <partial name="RoleFormParialView" model="new RoleFormViewModel()" />
</div> *@

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.UserName)</th>
                <th>@Html.DisplayNameFor(r => r.DisplayName)</th>
                <th>@Html.DisplayNameFor(r => r.Email)</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.DisplayName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(',', user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There Is No Records ):</h2>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


