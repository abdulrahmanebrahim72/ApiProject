@model IReadOnlyList<ProductCategory>

@{
    ViewData["Title"] = "Index";
}
<h1>All Categories</h1>

<partial name="CreateFormPartialView" model="new ProductCategory()" />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is No Brands!</h2>
    </div>
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}



